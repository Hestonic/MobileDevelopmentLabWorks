<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/header"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/main_padding"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/ic_back"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_back" />

    <TextView
        android:id="@+id/tittle"
        style="@style/primary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/marginLeft_tittle"
        android:layout_marginTop="@dimen/marginTop_tittle"
        android:text="@string/Notifications"
        app:layout_constraintLeft_toRightOf="@id/ic_back"
        app:layout_constraintStart_toEndOf="@id/ic_back"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/ic_search"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_search" />

    <androidx.constraintlayout.widget.Barrier
        android:id="@+id/tittle_section_bottom_barrier"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:barrierDirection="bottom"
        app:constraint_referenced_ids="ic_back, tittle, ic_search" />

    <LinearLayout
        android:id="@+id/comment_01"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@color/gray_bg"
        android:orientation="vertical"
        android:paddingLeft="16dp"
        android:paddingTop="16dp"
        android:paddingRight="8dp"
        android:paddingBottom="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tittle_section_bottom_barrier">

        <LinearLayout
            android:id="@+id/block_comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/img_1"
                android:layout_width="40dp"
                android:layout_height="40dp"

                android:src="@drawable/userpic1" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/name_1"
                    style="@style/text"
                    android:layout_width="272dp"
                    android:layout_height="20dp"
                    android:layout_marginStart="@dimen/marginLeft_name"
                    android:text="@string/name_01" />

                <TextView
                    android:id="@+id/date_01"
                    android:layout_width="272dp"
                    android:layout_height="24dp"
                    android:layout_marginStart="@dimen/marginLeft_name"
                    android:text="@string/date_01" />

            </LinearLayout>
        </LinearLayout>

        <TextView
            style="@style/text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/marginTop_text"
            android:text="@string/comment_01" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerInParent="true"
                android:layout_marginTop="@dimen/marginTop_tittle"
                android:text="@string/replayes_01"
                android:textColor="@color/replays_01" />

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_alignParentEnd="true"
                android:layout_centerInParent="true"
                android:src="@drawable/ic_like" />
        </RelativeLayout>
    </LinearLayout>


    <LinearLayout
        android:id="@+id/comment_02"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@color/gray_bg"
        android:orientation="vertical"
        android:paddingLeft="16dp"
        android:paddingTop="16dp"
        android:paddingRight="8dp"
        android:paddingBottom="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/comment_01">

        <LinearLayout
            android:id="@+id/block_comment_02"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/img_2"
                android:layout_width="40dp"
                android:layout_height="40dp"

                android:src="@drawable/userpic2" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/name_2"
                    style="@style/text"
                    android:layout_width="272dp"
                    android:layout_height="20dp"
                    android:layout_marginStart="@dimen/marginLeft_name"
                    android:text="@string/name_02" />

                <TextView
                    android:id="@+id/date_02"
                    android:layout_width="272dp"
                    android:layout_height="24dp"
                    android:layout_marginStart="@dimen/marginLeft_name"
                    android:text="@string/date_02" />

            </LinearLayout>
        </LinearLayout>

        <TextView
            style="@style/text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/marginTop_text"
            android:text="@string/comment_02" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerInParent="true"
                android:layout_marginTop="@dimen/marginTop_tittle"
                android:text="@string/replayes_02"
                android:textColor="@color/replays_01" />

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_alignParentEnd="true"
                android:layout_centerInParent="true"
                android:src="@drawable/ic_like" />
        </RelativeLayout>
    </LinearLayout>


    <LinearLayout
        android:id="@+id/comment_03"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@color/gray_bg"
        android:orientation="vertical"
        android:paddingLeft="16dp"
        android:paddingTop="16dp"
        android:paddingRight="8dp"
        android:paddingBottom="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/comment_02">

        <LinearLayout
            android:id="@+id/block_comment_03"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/img_3"
                android:layout_width="40dp"
                android:layout_height="40dp"

                android:src="@drawable/userpic3" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/name_3"
                    style="@style/text"
                    android:layout_width="272dp"
                    android:layout_height="20dp"
                    android:layout_marginStart="@dimen/marginLeft_name"
                    android:text="@string/name_03" />

                <TextView
                    android:id="@+id/date_03"
                    android:layout_width="272dp"
                    android:layout_height="24dp"
                    android:layout_marginStart="@dimen/marginLeft_name"
                    android:text="@string/date_03" />

            </LinearLayout>
        </LinearLayout>

        <TextView
            style="@style/text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/marginTop_text"
            android:text="@string/comment_03" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerInParent="true"
                android:layout_marginTop="@dimen/marginTop_tittle"
                android:text="@string/replayes_03"
                android:textColor="@color/replays_01" />

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_alignParentEnd="true"
                android:layout_centerInParent="true"
                android:src="@drawable/ic_like" />
        </RelativeLayout>
    </LinearLayout>


    <ImageView
        android:id="@+id/ic_bag"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/ic_bag"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent" />

    <ImageView
        android:id="@+id/ic_heart"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/ic_heart"
        app:layout_constraintBottom_toTopOf="@id/account"
        app:layout_constraintRight_toRightOf="@id/account"
        app:layout_constraintLeft_toLeftOf="@id/account"/>

    <TextView
        android:id="@+id/account"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Account"
        style="@style/text"
        android:textColor="@color/heart_01"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />

    <ImageView
        android:id="@+id/ic_shop"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/ic_shop1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="@id/ic_bag"
        app:layout_constraintRight_toRightOf="@id/ic_heart" />

    <ImageView
        android:id="@+id/ic_book"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/ic_book1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="@id/ic_bag"
        app:layout_constraintRight_toRightOf="@id/ic_shop" />

    <ImageView
        android:id="@+id/ic_ticket"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/ic_ticket1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="@id/ic_shop"
        app:layout_constraintRight_toRightOf="@id/ic_heart" />


</androidx.constraintlayout.widget.ConstraintLayout>





