<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/my_nav"
    app:startDestination="@id/listFragment">

    <fragment
        android:id="@+id/listFragment"
        android:name="com.example.homework6.fragments.list.ListFragment"
        android:label="fragment_list"
        tools:layout="@layout/fragment_list" >
        <action
            android:id="@+id/action_listFragment_to_addFragment"
            app:destination="@id/addFragment" />
        <action
            android:id="@+id/action_listFragment_to_parentFragment"
            app:destination="@id/parentFragment" />
        <argument
            android:name="id"
            app:argType="integer"
            android:defaultValue="0" />
        <argument
            android:name="node"
            app:argType="string"
            android:defaultValue="null" />
    </fragment>
    <fragment
        android:id="@+id/addFragment"
        android:name="com.example.homework6.fragments.add.AddFragment"
        android:label="fragment_add"
        tools:layout="@layout/fragment_add" >
        <action
            android:id="@+id/action_addFragment_to_listFragment"
            app:destination="@id/listFragment" />
    </fragment>
    <fragment
        android:id="@+id/parentFragment"
        android:name="com.example.homework6.fragments.update.ParentFragment"
        android:label="Parent"
        tools:layout="@layout/fragment_parent" >
        <action
            android:id="@+id/action_parentFragment_to_childrenFragment2"
            app:destination="@id/childrenFragment" />
        <action
            android:id="@+id/action_parentFragment_to_listFragment"
            app:destination="@id/listFragment" />
        <argument
            android:name="id"
            app:argType="integer"
            android:defaultValue="0" />
        <argument
            android:name="node"
            app:argType="string"
            android:defaultValue="null" />
    </fragment>
    <fragment
        android:id="@+id/childrenFragment"
        android:name="com.example.homework6.fragments.update.ChildrenFragment"
        android:label="fragment_children"
        tools:layout="@layout/fragment_children" >
        <action
            android:id="@+id/action_childrenFragment_to_listFragment"
            app:destination="@id/listFragment" />
        <action
            android:id="@+id/action_childrenFragment_to_parentFragment"
            app:destination="@id/parentFragment" />
        <argument
            android:name="id"
            app:argType="integer"
            android:defaultValue="0" />
        <argument
            android:name="node"
            app:argType="string"
            android:defaultValue="null" />
    </fragment>
</navigation>